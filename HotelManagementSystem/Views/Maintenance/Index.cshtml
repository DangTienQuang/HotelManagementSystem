@model IEnumerable<DTOs.RoomMaintenanceDto>

@{
    ViewData["Title"] = "Maintenance Tickets";
}

<h1>Maintenance Tickets</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-danger">
        <i class="fas fa-plus"></i> Create New Ticket
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Room</th>
            <th>Repairman</th>
            <th>Reason</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomNumber</td>
                <td>@item.StaffName</td>
                <td>@item.Reason</td>
                <td>@item.StartDate.ToString("g")</td>
                <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToString("g") : "-")</td>
                <td>
                    @if (item.Status == "Completed")
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">In Progress</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
