@model IEnumerable<DTOs.RoomDto>

@{
    ViewData["Title"] = "Maintenance Management";
}

<h1>Maintenance Management</h1>

<table class="table table-bordered table-hover mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Current Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomNumber</td>
                <td>@item.RoomType</td>
                <td>
                    @if(item.Status == "Maintenance")
                    {
                        <span class="badge bg-secondary">Maintenance</span>
                    }
                    else if(item.Status == "Available")
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else if(item.Status == "Occupied")
                    {
                        <span class="badge bg-danger">Occupied</span>
                    }
                    else if(item.Status == "Cleaning")
                    {
                        <span class="badge bg-info">Cleaning</span>
                    }
                    else 
                    {
                        <span class="badge bg-dark">@item.Status</span>
                    }
                </td>
                <td>
                    @if (item.Status == "Available")
                    {
                        <form asp-action="StartMaintenance" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">
                                <i class="fas fa-tools"></i> Start Maintenance
                            </button>
                        </form>
                    }
                    else if (item.Status == "Maintenance")
                    {
                        <form asp-action="FinishMaintenance" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-check"></i> Finish
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted" style="font-size: 0.9em;">Cannot modify (Room is busy)</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>