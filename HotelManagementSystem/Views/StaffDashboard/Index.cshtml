@model DTOs.StaffTaskDto

@{
    ViewData["Title"] = "My Dashboard";
}

<h1>My Dashboard</h1>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>My Cleaning Tasks</h3>
        @if (Model.MyCleaningTasks.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.MyCleaningTasks)
                    {
                        <tr>
                            <td>@task.RoomNumber</td>
                            <td>
                                <span class="badge @(task.Status == "Pending" ? "bg-warning" : task.Status == "In Progress" ? "bg-primary" : "bg-success")">
                                    @task.Status
                                </span>
                            </td>
                            <td>
                                <a asp-controller="RoomCleaning" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-info">Update Status</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">No active cleaning tasks assigned.</div>
        }
    </div>

    <div class="col-md-6">
        <h3>Maintenance Requests</h3>
        @if (Model.MaintenanceRooms.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.MaintenanceRooms)
                    {
                        <tr>
                            <td>@room.RoomNumber</td>
                            <td>@room.RoomType</td>
                            <td>
                                <form asp-controller="Maintenance" asp-action="FinishMaintenance" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@room.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-success">Finish</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-success">No rooms under maintenance.</div>
        }
    </div>
</div>
