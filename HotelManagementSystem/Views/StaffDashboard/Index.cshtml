@model DTOs.StaffDashboardDto

@{
    ViewData["Title"] = "Staff Dashboard";
}

<h1>Staff Dashboard</h1>

<div class="row mb-4">
    <div class="col">
        <div class="card text-white bg-success mb-3 h-100">
            <div class="card-header">Available</div>
            <div class="card-body">
                <h5 class="card-title display-4">@Model.AvailableRoomsCount</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-danger mb-3 h-100">
            <div class="card-header">Occupied</div>
            <div class="card-body">
                <h5 class="card-title display-4">@Model.OccupiedRoomsCount</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-warning mb-3 h-100">
            <div class="card-header">Reserved</div>
            <div class="card-body">
                <h5 class="card-title display-4">@Model.ReservedRoomsCount</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-info mb-3 h-100">
            <div class="card-header">Cleaning</div>
            <div class="card-body">
                <h5 class="card-title display-4">@Model.CleaningRoomsCount</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-secondary mb-3 h-100">
            <div class="card-header">Maintenance</div>
            <div class="card-body">
                <h5 class="card-title display-4">@Model.MaintenanceRoomsCount</h5>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title text-primary">Front Desk</h5>
                <p class="card-text">Process guest Check-Ins and Check-Outs.</p>
                <a asp-controller="FrontDesk" asp-action="Index" class="btn btn-primary w-100 mt-auto">Go to Front Desk</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-success">
            <div class="card-body">
                <h5 class="card-title text-success">My Tasks</h5>
                <p class="card-text">View and update your assigned maintenance tasks.</p>
                <a asp-controller="StaffTask" asp-action="MyTasks" class="btn btn-success w-100 mt-auto">View My Tasks</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Room Management</h5>
                <p class="card-text">Add, update or view room details.</p>
                <a asp-controller="Room" asp-action="Index" class="btn btn-primary w-100 mt-auto">Manage Rooms</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Cleaning Schedule</h5>
                <p class="card-text">Assign tasks and track cleaning status.</p>
                <a asp-controller="RoomCleaning" asp-action="Index" class="btn btn-primary w-100 mt-auto">Manage Cleaning</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-warning">
            <div class="card-body">
                <h5 class="card-title text-warning">Maintenance</h5>
                <p class="card-text">Set rooms to maintenance mode.</p>
                <a asp-controller="Maintenance" asp-action="Index" class="btn btn-warning w-100 mt-auto">Manage Maintenance</a>
            </div>
        </div>
    </div>
</div>



<h3>Room Status Details</h3>
<div class="row">
    <div class="col-md-3">
        <h4 class="text-danger">Occupied</h4>
        <ul class="list-group">
            @if (Model.OccupiedRooms.Any())
            {
                @foreach (var room in Model.OccupiedRooms)
                {
                    <li class="list-group-item list-group-item-danger">
                        <strong>@room.RoomNumber</strong> <br />
                        <small>@room.RoomType</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item text-muted">No rooms occupied</li>
            }
        </ul>
    </div>

    <div class="col-md-3">
        <h4 class="text-warning">Reserved</h4>
        <ul class="list-group">
            @if (Model.ReservedRooms.Any())
            {
                @foreach (var room in Model.ReservedRooms)
                {
                    <li class="list-group-item list-group-item-warning">
                        <strong>@room.RoomNumber</strong> <br />
                        <small>@room.RoomType</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item text-muted">No reservations</li>
            }
        </ul>
    </div>

    <div class="col-md-3">
        <h4 class="text-info">Cleaning</h4>
        <ul class="list-group">
            @if (Model.CleaningRooms != null && Model.CleaningRooms.Any())
            {
                @foreach (var room in Model.CleaningRooms)
                {
                    <li class="list-group-item list-group-item-info">
                        <strong>@room.RoomNumber</strong> <br />
                        <small>@room.RoomType</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item text-muted">No rooms cleaning</li>
            }
        </ul>
    </div>

    <div class="col-md-3">
        <h4 class="text-secondary">Maintenance</h4>
        <ul class="list-group">
            @if (Model.MaintenanceRooms != null && Model.MaintenanceRooms.Any())
            {
                @foreach (var room in Model.MaintenanceRooms)
                {
                    <li class="list-group-item list-group-item-secondary">
                        <strong>@room.RoomNumber</strong> <br />
                        <small>@room.RoomType</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item text-muted">No maintenance</li>
            }
        </ul>
    </div>
</div>