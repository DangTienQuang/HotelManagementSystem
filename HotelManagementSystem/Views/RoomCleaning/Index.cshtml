@model DTOs.RoomCleaningDto

@{
    ViewData["Title"] = "Update Cleaning Status";
}

<h1>Update Progress</h1>
<h4>Task Details</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Room</label>
                        <input type="text" class="form-control bg-light" value="@Model.RoomNumber" readonly />
                        <small class="text-muted">You cannot change the assigned room.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Assigned Staff</label>
                        <input type="text" class="form-control bg-light" value="@Model.CleanerName" readonly />
                        <small class="text-muted">Re-assigning must be done by deleting and creating a new task.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Assigned Date</label>
                        <input type="text" class="form-control bg-light" value="@Model.CleaningDate.ToString("g")" readonly />
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Status" class="control-label fw-bold text-primary">Current Status</label>
                        <select name="status" class="form-select form-select-lg border-primary" asp-items="ViewBag.Statuses"></select>
                    </div>

                    <div class="form-group d-grid gap-2">
                        <input type="submit" value="Update Status" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}