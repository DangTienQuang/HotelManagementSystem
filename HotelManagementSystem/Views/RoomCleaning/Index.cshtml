@model IEnumerable<DTOs.RoomCleaningDto>

@{
    ViewData["Title"] = "Cleaning Schedule";
}

<h1>Cleaning Schedule</h1>

<div class="mb-3">
    <a asp-action="Assign" class="btn btn-primary">
        <i class="fas fa-plus"></i> Assign Cleaning Task
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Room</th>
            <th>Cleaner</th>
            <th>Assigned Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomNumber</td>
                <td>@item.CleanerName</td>
                <td>@item.CleaningDate.ToString("g")</td>
                <td>
                    @if (item.Status == "Completed")
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else if (item.Status == "In Progress")
                    {
                        <span class="badge bg-warning text-dark">In Progress</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Update Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>
