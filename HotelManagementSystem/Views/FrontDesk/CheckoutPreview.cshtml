@model DTOs.Entities.Reservation

@{
    ViewData["Title"] = "Checkout Preview";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3><i class="bi bi-receipt"></i> Checkout Bill Preview</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Guest Information</h5>
                    <p><strong>Name:</strong> @Model.Customer.FullName</p>
                    <p><strong>Room:</strong> @Model.Room.RoomNumber (@Model.Room.RoomType)</p>
                    <p><strong>Price per Night:</strong> @Model.Room.Price.ToString("N0") &#8363;</p>
                </div>
                <div class="col-md-6">
                    <h5>Stay Duration</h5>
                    <p><strong>Check-In:</strong> @ViewBag.CheckInTime.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Check-Out (Now):</strong> @ViewBag.CheckOutTime.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="text-primary fw-bold">Total Stay: @ViewBag.DaysStayed Night(s)</p>
                </div>
            </div>

            <hr />

            <div class="alert alert-success text-center" role="alert">
                <h4>Total Amount Due:</h4>
                <h2 class="fw-bold">@ViewBag.TotalPrice.ToString("N0") &#8363;</h2>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>

                <form asp-action="CheckOut" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-cash-coin"></i> Confirm Payment & Check Out
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>