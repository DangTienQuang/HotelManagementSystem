@model IEnumerable<DTOs.UserDto>

@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">User Management</h1>
            <p class="text-muted">Manage system users and access roles</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-person-plus me-2"></i>Create New User
        </a>
    </div>

    <div class="card mb-4 shadow border-0">
        <div class="card-body p-4 bg-light rounded">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group bg-white rounded shadow-sm">
                        <span class="input-group-text border-0 bg-transparent"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                               class="form-control border-0" placeholder="Search by name or email..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="roleFilter" class="form-select border-0 shadow-sm" onchange="this.form.submit()">
                        <option value="">-- Filter by Role --</option>
                        <option value="Staff" selected="@((string)ViewData["CurrentRole"] == "Staff")">Staff</option>
                        <option value="Customer" selected="@((string)ViewData["CurrentRole"] == "Customer")">Customer</option>
                        <option value="Admin" selected="@((string)ViewData["CurrentRole"] == "Admin")">Admin</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-secondary w-100 shadow-sm">
                        Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="ps-4 text-secondary text-uppercase font-weight-bold small">Full Name</th>
                            <th class="text-secondary text-uppercase font-weight-bold small">Email</th>
                            <th class="text-secondary text-uppercase font-weight-bold small">Role</th>
                            <th class="text-end pe-4 text-secondary text-uppercase font-weight-bold small">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-initial rounded-circle bg-label-primary me-3 text-primary fw-bold d-flex justify-content-center align-items-center" style="width: 38px; height: 38px; background-color: rgba(13, 110, 253, 0.1);">
                                            @item.FullName.Substring(0,1).ToUpper()
                                        </div>
                                        <div class="fw-bold text-dark">@item.FullName</div>
                                    </div>
                                </td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.Role == "Admin")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Admin</span>
                                    }
                                    else if (item.Role == "Staff")
                                    {

                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">Staff</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Customer</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
