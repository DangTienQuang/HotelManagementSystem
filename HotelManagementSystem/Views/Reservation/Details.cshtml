@model DTOs.ReservationDto
@using DTOs.Enums

@{
    ViewData["Title"] = "Reservation Details";
    
    var statusBadgeClass = Model.Status switch
    {
        ReservationStatus.Confirmed => "bg-success",
        ReservationStatus.Cancelled => "bg-danger",
        ReservationStatus.CheckedIn => "bg-primary",
        ReservationStatus.CheckedOut => "bg-secondary",
        _ => "bg-warning"
    };
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3><i class="bi bi-bookmark-check"></i> Reservation Details</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <p><span class="badge @statusBadgeClass">@Model.Status</span></p>
                        </div>
                    </div>

                    <hr />
                    <h5>Guest Information</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Guest Name:</strong>
                            <p class="text-muted">@Model.CustomerName</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Room Number:</strong>
                            <p class="text-muted">@Model.RoomNumber</p>
                        </div>
                    </div>

                    <hr />
                    <h5>Stay Information</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Check-in Date:</strong>
                            <p class="text-muted">
                                <i class="bi bi-calendar-event"></i> 
                                @Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Check-out Date:</strong>
                            <p class="text-muted">
                                <i class="bi bi-calendar-event"></i> 
                                @Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>

                    <hr />
                    <h5>Pricing</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Number of Nights:</strong>
                            <p class="text-muted">@Model.NumberOfNights night(s)</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Total Price:</strong>
                            <p class="text-success fw-bold fs-5">@Model.TotalPrice.ToString("N0") &#8363;</p>
                        </div>
                    </div>

                    <hr />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                        <a asp-action="MyReservations" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to My Reservations
                        </a>
                        @if (Model.CanCancel)
                        {
                            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-x-circle"></i> Cancel Reservation
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
