@model IEnumerable<DTOs.ReservationDto>
@using DTOs.Enums

@{
    ViewData["Title"] = "My Reservations";
}

<div class="container mt-4">
    <h1>My Reservations</h1>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var reservation in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Reservation - Room @reservation.RoomNumber</h5>
                            @if (reservation.Status == ReservationStatus.Confirmed)
                            {
                                <span class="badge bg-success">@reservation.Status</span>
                            }
                            else if (reservation.Status == ReservationStatus.Cancelled)
                            {
                                <span class="badge bg-danger">@reservation.Status</span>
                            }
                            else if (reservation.Status == ReservationStatus.CheckedIn)
                            {
                                <span class="badge bg-info">@reservation.Status</span>
                            }
                            else if (reservation.Status == ReservationStatus.CheckedOut)
                            {
                                <span class="badge bg-secondary">@reservation.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@reservation.Status</span>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-3 text-muted">Room @reservation.RoomNumber</h6>
                            
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Check-in:</strong>
                                </div>
                                <div class="col-6">
                                    @reservation.CheckInDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Check-out:</strong>
                                </div>
                                <div class="col-6">
                                    @reservation.CheckOutDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Nights:</strong>
                                </div>
                                <div class="col-6">
                                    @reservation.NumberOfNights
                                </div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Total Price:</strong>
                                </div>
                                <div class="col-6">
                                    <strong class="text-success">@reservation.TotalPrice.ToString("N0") &#8363;</strong>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Guest:</strong>
                                </div>
                                <div class="col-6">
                                    @reservation.CustomerName
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (reservation.CanCancel)
                            {
                                <form asp-action="Cancel" asp-route-id="@reservation.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">Cancel Reservation</button>
                                </form>
                            }
                            <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No reservations found</h4>
            <p>You haven't made any reservations yet.</p>
            <hr />
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Browse Available Rooms</a>
        </div>
    }
</div>
