@model IEnumerable<DTOs.MaintenanceTaskDto>

@{
    ViewData["Title"] = "Task Assignment";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 px-0" style="background-color: #0066cc; min-height: 100vh; position: fixed; left: 0; top: 56px; z-index: 1000;">
            <div class="p-3">
                <h5 class="text-white mb-4">Admin Panel</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="AdminStaff" asp-action="Index">
                            <i class="bi bi-people"></i> Staff Management
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="AdminCustomer" asp-action="Index">
                            <i class="bi bi-person"></i> Customer Management
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white active" style="background-color: rgba(255,255,255,0.2); border-radius: 5px;" asp-controller="AdminTask" asp-action="Index">
                            <i class="bi bi-clipboard-check"></i> Task Assignment
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="AdminNotification" asp-action="Index">
                            <i class="bi bi-bell"></i> Notifications
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="AdminRevenue" asp-action="Index">
                            <i class="bi bi-cash-coin"></i> Revenue Management
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 ms-auto" style="margin-left: 16.66666667%;">
            <div class="p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <h1 class="mb-2">Task Assignment</h1>
                <p class="text-muted mb-4">Assign and track maintenance and cleaning tasks</p>

                <h3 class="mb-3">Maintenance Tasks</h3>

                <!-- Add New Task Form -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Add New Maintenance Task</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateTask" method="post" id="createTaskForm">
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="form-label">Room Number</label>
                                    <select name="RoomId" class="form-select" required>
                                        <option value="">Select Room</option>
                                        @foreach (var room in ViewBag.Rooms as SelectList)
                                        {
                                            <option value="@room.Value">@room.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Issue Description</label>
                                    <input name="Description" type="text" class="form-control" placeholder="e.g., Air conditioning not cooling" required />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Priority</label>
                                    <select name="Priority" class="form-select" required>
                                        <option value="High">High</option>
                                        <option value="Medium" selected>Medium</option>
                                        <option value="Low">Low</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Assigned Staff</label>
                                    <select name="AssignedTo" class="form-select">
                                        <option value="">Select Staff</option>
                                        @foreach (var staff in ViewBag.Staff as SelectList)
                                        {
                                            <option value="@staff.Value">@staff.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Deadline</label>
                                    <input name="Deadline" type="date" class="form-control" required />
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">Add</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tasks Table -->
                <div class="card shadow">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Room Number</th>
                                    <th>Issue Description</th>
                                    <th>Priority</th>
                                    <th>Assigned Staff</th>
                                    <th>Deadline</th>
                                    <th>Status</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var task in Model)
                                    {
                                        <tr>
                                            <td class="align-middle fw-bold">@task.RoomNumber</td>
                                            <td class="align-middle">@task.Description</td>
                                            <td class="align-middle">
                                                @if (task.Priority == "High")
                                                {
                                                    <span class="badge bg-danger">High</span>
                                                }
                                                else if (task.Priority == "Medium")
                                                {
                                                    <span class="badge bg-warning text-dark">Medium</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Low</span>
                                                }
                                            </td>
                                            <td class="align-middle">@task.AssignedStaffName</td>
                                            <td class="align-middle">
                                                <small>@task.Deadline.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td class="align-middle">
                                                @if (task.Status == "Pending")
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                                else if (task.Status == "InProgress")
                                                {
                                                    <span class="badge bg-primary">In Progress</span>
                                                }
                                                else if (task.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else if (task.Status == "Approved")
                                                {
                                                    <span class="badge bg-info">Approved</span>
                                                }
                                            </td>
                                            <td class="text-end align-middle">
                                                @if (task.Status == "Approved")
                                                {
                                                    <span class="text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Approved
                                                    </span>
                                                }
                                                else if (task.Status == "Completed")
                                                {
                                                    <!-- Completed: Only Approve button -->
                                                    <form asp-action="ApproveTask" method="post" class="d-inline">
                                                        <input type="hidden" name="taskId" value="@task.Id" />
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-check-circle"></i> Approve
                                                        </button>
                                                    </form>
                                                }
                                                else if (task.Status == "Pending")
                                                {
                                                    <!-- Pending: Only Edit button -->
                                                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                }
                                                else
                                                {
                                                    <!-- InProgress: No actions -->
                                                    <span class="text-muted small">
                                                        <i class="bi bi-hourglass-split"></i> In Progress
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">No maintenance tasks found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

