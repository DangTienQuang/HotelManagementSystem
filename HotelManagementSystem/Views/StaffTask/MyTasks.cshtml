@model IEnumerable<DTOs.MaintenanceTaskDto>

@{
    ViewData["Title"] = "My Tasks";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 px-0" style="background-color: #0066cc; min-height: 100vh; position: fixed; left: 0; top: 56px; z-index: 1000;">
            <div class="p-3">
                <h5 class="text-white mb-4">Staff Panel</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="StaffDashboard" asp-action="Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white active" style="background-color: rgba(255,255,255,0.2); border-radius: 5px;" asp-controller="StaffTask" asp-action="MyTasks">
                            <i class="bi bi-clipboard-check"></i> My Tasks
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="RoomCleaning" asp-action="Index">
                            <i class="bi bi-brush"></i> Cleaning Schedule
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Maintenance" asp-action="Index">
                            <i class="bi bi-tools"></i> Maintenance
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Room" asp-action="Index">
                            <i class="bi bi-door-closed"></i> Rooms
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 ms-auto" style="margin-left: 16.66666667%;">
            <div class="p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="mb-2">My Maintenance Tasks</h1>
                        <p class="text-muted">Tasks assigned to you by the administrator</p>
                    </div>
                    <div>
                        <span class="badge bg-primary fs-6">
                            Total: @(Model?.Count() ?? 0) tasks
                        </span>
                    </div>
                </div>

                <!-- Task Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card border-secondary">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Pending</h6>
                                <h2 class="text-secondary">@(Model?.Count(t => t.Status == "Pending") ?? 0)</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-primary">
                            <div class="card-body text-center">
                                <h6 class="text-muted">In Progress</h6>
                                <h2 class="text-primary">@(Model?.Count(t => t.Status == "InProgress") ?? 0)</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-success">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Completed</h6>
                                <h2 class="text-success">@(Model?.Count(t => t.Status == "Completed") ?? 0)</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-info">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Approved</h6>
                                <h2 class="text-info">@(Model?.Count(t => t.Status == "Approved") ?? 0)</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tasks Table -->
                <div class="card shadow">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Room</th>
                                    <th>Description</th>
                                    <th>Priority</th>
                                    <th>Deadline</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var task in Model.OrderBy(t => t.Deadline))
                                    {
                                        var isOverdue = task.Deadline < DateTime.Now && task.Status != "Completed" && task.Status != "Approved";
                                        var rowClass = isOverdue ? "table-danger" : "";
                                        
                                        <tr class="@rowClass">
                                            <td class="align-middle">
                                                <strong>@task.RoomNumber</strong>
                                                @if (isOverdue)
                                                {
                                                    <br /><small class="text-danger"><i class="bi bi-exclamation-triangle"></i> Overdue</small>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                @task.Description
                                            </td>
                                            <td class="align-middle">
                                                @if (task.Priority == "High")
                                                {
                                                    <span class="badge bg-danger">High</span>
                                                }
                                                else if (task.Priority == "Medium")
                                                {
                                                    <span class="badge bg-warning text-dark">Medium</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Low</span>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                <small>@task.Deadline.ToString("MMM dd, yyyy")</small>
                                                <br />
                                                <small class="text-muted">@task.Deadline.ToString("hh:mm tt")</small>
                                            </td>
                                            <td class="align-middle">
                                                @if (task.Status == "Pending")
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                                else if (task.Status == "InProgress")
                                                {
                                                    <span class="badge bg-primary">In Progress</span>
                                                }
                                                else if (task.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                    @if (task.CompletedAt.HasValue)
                                                    {
                                                        <br /><small class="text-muted">@task.CompletedAt.Value.ToString("MMM dd")</small>
                                                    }
                                                }
                                                else if (task.Status == "Approved")
                                                {
                                                    <span class="badge bg-info">Approved</span>
                                                    <br /><small class="text-muted">by @task.ApprovedByName</small>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                <small class="text-muted">@task.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td class="text-end align-middle">
                                                @if (task.Status != "Approved")
                                                {
                                                    <div class="btn-group" role="group">
                                                        @if (task.Status == "Pending")
                                                        {
                                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                                <input type="hidden" name="taskId" value="@task.Id" />
                                                                <input type="hidden" name="status" value="InProgress" />
                                                                <button type="submit" class="btn btn-sm btn-primary" title="Start Task">
                                                                    <i class="bi bi-play-fill"></i> Start
                                                                </button>
                                                            </form>
                                                        }
                                                        else if (task.Status == "InProgress")
                                                        {
                                                            <form asp-action="CompleteTask" method="post" class="d-inline">
                                                                <input type="hidden" name="taskId" value="@task.Id" />
                                                                <button type="submit" class="btn btn-sm btn-success" title="Mark as Completed">
                                                                    <i class="bi bi-check-circle"></i> Complete
                                                                </button>
                                                            </form>
                                                        }
                                                        else if (task.Status == "Completed")
                                                        {
                                                            <span class="text-muted small">
                                                                <i class="bi bi-hourglass-split"></i> Awaiting approval
                                                            </span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Done
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-5">
                                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                            <p class="mt-3">No tasks assigned to you yet.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Task Workflow Info -->
                <div class="card mt-4 border-info">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-info-circle"></i> Task Workflow
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-center">
                                <span class="badge bg-secondary fs-6">1. Pending</span>
                                <p class="small mt-2 mb-0">Task assigned</p>
                            </div>
                            <i class="bi bi-arrow-right text-muted"></i>
                            <div class="text-center">
                                <span class="badge bg-primary fs-6">2. In Progress</span>
                                <p class="small mt-2 mb-0">You start working</p>
                            </div>
                            <i class="bi bi-arrow-right text-muted"></i>
                            <div class="text-center">
                                <span class="badge bg-success fs-6">3. Completed</span>
                                <p class="small mt-2 mb-0">You mark as done</p>
                            </div>
                            <i class="bi bi-arrow-right text-muted"></i>
                            <div class="text-center">
                                <span class="badge bg-info fs-6">4. Approved</span>
                                <p class="small mt-2 mb-0">Admin approves</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
