@model IEnumerable<DTOs.MaintenanceTaskDto>

@{
    ViewData["Title"] = "My Tasks";
    Layout = "_StaffLayout";
}

<div class="container-fluid py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-2">My Maintenance Tasks</h1>
            <p class="text-muted">Tasks assigned to you by the administrator</p>
        </div>
        <div>
            <span class="badge bg-primary fs-6">
                Total: @(Model?.Count() ?? 0) tasks
            </span>
        </div>
    </div>

    <!-- Task Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-secondary h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase small">Pending</h6>
                    <h2 class="text-secondary display-6 text-dark fw-bold">@(Model?.Count(t => t.Status == "Pending") ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase small">In Progress</h6>
                    <h2 class="text-primary display-6 fw-bold">@(Model?.Count(t => t.Status == "InProgress") ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase small">Completed</h6>
                    <h2 class="text-success display-6 fw-bold">@(Model?.Count(t => t.Status == "Completed") ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase small">Approved</h6>
                    <h2 class="text-info display-6 fw-bold">@(Model?.Count(t => t.Status == "Approved") ?? 0)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks Table -->
    <div class="card shadow border-0 mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Room</th>
                            <th>Description</th>
                            <th>Priority</th>
                            <th>Deadline</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var task in Model.OrderBy(t => t.Deadline))
                            {
                                var isOverdue = task.Deadline < DateTime.Now && task.Status != "Completed" && task.Status != "Approved";
                                var rowClass = isOverdue ? "table-danger" : "";
                                
                                <tr class="@rowClass">
                                    <td class="ps-4">
                                        <strong>@task.RoomNumber</strong>
                                        @if (isOverdue)
                                        {
                                            <div class="text-danger small"><i class="bi bi-exclamation-triangle"></i> Overdue</div>
                                        }
                                    </td>
                                    <td>
                                        @task.Description
                                    </td>
                                    <td>
                                        @if (task.Priority == "High")
                                        {
                                            <span class="badge bg-danger rounded-pill">High</span>
                                        }
                                        else if (task.Priority == "Medium")
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill">Medium</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary rounded-pill">Low</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@task.Deadline.ToString("MMM dd, yyyy")</span>
                                            <small class="text-muted">@task.Deadline.ToString("hh:mm tt")</small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (task.Status == "Pending")
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                        else if (task.Status == "InProgress")
                                        {
                                            <span class="badge bg-primary">In Progress</span>
                                        }
                                        else if (task.Status == "Completed")
                                        {
                                            <div class="d-flex flex-column">
                                                <span class="badge bg-success">Completed</span>
                                                @if (task.CompletedAt.HasValue)
                                                {
                                                    <small class="text-muted">@task.CompletedAt.Value.ToString("MMM dd")</small>
                                                }
                                            </div>
                                        }
                                        else if (task.Status == "Approved")
                                        {
                                            <div class="d-flex flex-column">
                                                <span class="badge bg-info text-dark">Approved</span>
                                                <small class="text-muted">by @task.ApprovedByName</small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@task.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        @if (task.Status != "Approved")
                                        {
                                            <div class="btn-group" role="group">
                                                @if (task.Status == "Pending")
                                                {
                                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="taskId" value="@task.Id" />
                                                        <input type="hidden" name="status" value="InProgress" />
                                                        <button type="submit" class="btn btn-sm btn-outline-primary" title="Start Task">
                                                            <i class="bi bi-play-fill"></i> Start
                                                        </button>
                                                    </form>
                                                }
                                                else if (task.Status == "InProgress")
                                                {
                                                    <form asp-action="CompleteTask" method="post" class="d-inline">
                                                        <input type="hidden" name="taskId" value="@task.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as Completed">
                                                            <i class="bi bi-check-circle"></i> Complete
                                                        </button>
                                                    </form>
                                                }
                                                else if (task.Status == "Completed")
                                                {
                                                    <span class="text-muted small">
                                                        <i class="bi bi-hourglass-split"></i> Awaiting approval
                                                    </span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-success fw-bold">
                                                <i class="bi bi-check-circle-fill"></i> Done
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-5">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="bi bi-inbox display-4 mb-3 text-secondary opacity-50"></i>
                                        <p class="h5">No tasks assigned to you yet.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Task Workflow Info -->
    <div class="card border-0 shadow-sm bg-white">
        <div class="card-header bg-white border-bottom">
            <h5 class="card-title text-primary mb-0"><i class="bi bi-info-circle me-2"></i>Task Workflow</h5>
        </div>
        <div class="card-body">
            <div class="row text-center justify-content-center">
                <div class="col-6 col-md-2 mb-3 mb-md-0">
                    <span class="badge bg-secondary p-2 w-100 mb-2">1. Pending</span>
                    <p class="small text-muted mb-0">Task assigned</p>
                </div>
                <div class="col-auto d-none d-md-flex align-items-center text-muted"> <i class="bi bi-arrow-right"></i> </div>
                <div class="col-6 col-md-2 mb-3 mb-md-0">
                    <span class="badge bg-primary p-2 w-100 mb-2">2. In Progress</span>
                    <p class="small text-muted mb-0">You start working</p>
                </div>
                <div class="col-auto d-none d-md-flex align-items-center text-muted"> <i class="bi bi-arrow-right"></i> </div>
                <div class="col-6 col-md-2 mb-3 mb-md-0">
                    <span class="badge bg-success p-2 w-100 mb-2">3. Completed</span>
                    <p class="small text-muted mb-0">You mark as done</p>
                </div>
                <div class="col-auto d-none d-md-flex align-items-center text-muted"> <i class="bi bi-arrow-right"></i> </div>
                <div class="col-6 col-md-2">
                    <span class="badge bg-info text-dark p-2 w-100 mb-2">4. Approved</span>
                    <p class="small text-muted mb-0">Admin approves</p>
                </div>
            </div>
        </div>
    </div>
</div>
