@model HotelManagementSystem.ViewModels.HomeIndexViewModel
@using DTOs.Enums

@{
    ViewData["Title"] = "Available Rooms";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">Available Rooms</h1>
    <p class="text-center text-muted mb-4">Find your perfect room</p>

    <!-- Search and Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Search</label>
                    <input type="text" 
                           class="form-control" 
                           id="searchTerm" 
                           name="searchTerm" 
                           placeholder="Room number or type..." 
                           value="@Model.SearchTerm">
                </div>
                <div class="col-md-3">
                    <label for="roomType" class="form-label">Room Type</label>
                    <select class="form-select" id="roomType" name="roomType">
                        <option value="">All Types</option>
                        @foreach (RoomType type in Enum.GetValues(typeof(RoomType)))
                        {
                            <option value="@type" selected="@(Model.SelectedRoomType == type)">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="maxPrice" class="form-label">Max Price</label>
                    <input type="number" 
                           class="form-control" 
                           id="maxPrice" 
                           name="maxPrice" 
                           placeholder="0.00" 
                           step="0.01" 
                           value="@Model.MaxPrice">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
            @if (Model.HasActiveFilters)
            {
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Clear Filters</a>
                </div>
            }
        </div>
    </div>

    <!-- Room List -->
    @if (Model.Rooms != null && Model.Rooms.Any())
    {
        <div class="row">
            @foreach (var room in Model.Rooms)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Room @room.RoomNumber</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@room.RoomType</h6>
                            <ul class="list-unstyled">
                                <li><strong>Capacity:</strong> @room.Capacity person(s)</li>
                                <li><strong>Price:</strong> @room.Price.ToString("N0") ₫ / night</li>
                                <li>
                                    <span class="badge bg-success">@room.Status</span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-controller="Room" asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            <a asp-controller="Reservation" asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-primary btn-sm">Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No rooms available</h4>
            <p>Sorry, no rooms match your search criteria. Please try adjusting your filters.</p>
        </div>
    }
</div>

