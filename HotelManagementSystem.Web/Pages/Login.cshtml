@page
@model HotelManagementSystem.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = "_Layout"; // Hoặc để null nếu bạn không muốn hiện thanh Menu khi chưa login
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="display-4 text-primary mb-2">
                            <i class="bi bi-shield-lock-fill"></i>
                        </div>
                        <h3 class="fw-bold">HỆ THỐNG LUXURY</h3>
                        <p class="text-muted small">Vui lòng đăng nhập để bắt đầu ca làm việc</p>
                    </div>

                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger border-0 small">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success border-0 small italic">
                            <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên đăng nhập</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                                <input asp-for="LoginData.Username" class="form-control border-start-0 ps-0" placeholder="Username" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-key"></i></span>
                                <input asp-for="LoginData.Password" type="password" class="form-control border-start-0 ps-0" placeholder="••••••••" required />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary py-2 fw-bold shadow-sm">
                                ĐĂNG NHẬP <i class="bi bi-box-arrow-in-right ms-2"></i>
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted small mb-2">Bạn là nhân viên mới chưa có tài khoản?</p>
                        <a asp-page="/Register" class="btn btn-outline-dark w-100 py-2">
                            <i class="bi bi-person-plus-fill"></i> ĐĂNG KÝ THÀNH VIÊN MỚI
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3 text-center rounded-bottom-4">
                    <small class="text-muted">Quên mật khẩu? Vui lòng liên hệ Admin.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}