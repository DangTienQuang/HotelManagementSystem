@page
@model HotelManagementSystem.Web.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Đặt phòng mới";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white py-3">
            <h5 class="mb-0"><i class="bi bi-bookmark-plus-fill"></i> TẠO ĐƠN ĐẶT PHÒNG</h5>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold mb-1">Thông tin phòng</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-door-open"></i></span>
                            <input type="text" class="form-control bg-light fw-bold"
                                   value="Phòng: @Model.SelectedRoom?.RoomNumber (@Model.SelectedRoom?.RoomType)" readonly />
                        </div>
                        <input type="hidden" asp-for="Reservation.RoomId" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold mb-1">Khách hàng</label>
                        <select asp-for="Reservation.CustomerId" class="form-select border-primary" required>
                            <option value="">-- Chọn khách hàng từ danh sách --</option>
                            @foreach (var c in Model.CustomerList)
                            {
                                <option value="@c.Id">@c.FullName (@c.Phone)</option>
                            }
                        </select>
                        <div class="mt-1">
                            <a asp-page="/Admin/RegisterCustomer" class="small text-decoration-none text-primary fw-bold">
                                <i class="bi bi-person-plus"></i> + Thêm khách hàng mới ngay
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold mb-1">Ngày nhận phòng</label>
                        <input type="date" asp-for="Reservation.CheckInDate" class="form-control" required
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold mb-1">Ngày trả phòng (Dự kiến)</label>
                        <input type="date" asp-for="Reservation.CheckOutDate" class="form-control" required
                               value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-page="/Index" class="btn btn-light border px-4">Hủy bỏ</a>
                    <button type="submit" class="btn btn-primary px-4 shadow">Xác nhận đặt phòng</button>
                </div>
            </form>
        </div>
    </div>
</div>