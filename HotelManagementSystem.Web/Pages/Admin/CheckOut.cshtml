@page "{id:int}"
@model HotelManagementSystem.Web.Pages.Admin.CheckOutModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h5 class="mb-0">XÁC NHẬN THANH TOÁN</h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="text-danger fw-bold">@Model.TotalPrice.ToString("N0") VND</h2>
                        <p class="text-muted">Phòng @Model.Reservation.Room?.RoomNumber | @Model.TotalDays ngày</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <p class="mb-1"><strong>Khách hàng:</strong> @Model.Reservation.Customer?.FullName</p>
                        <p class="mb-1"><strong>Ngày đến:</strong> @Model.Reservation.CheckInDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Reservation.Id" />
                        <button type="submit" class="btn btn-success w-100 btn-lg shadow">HOÀN TẤT TRẢ PHÒNG</button>
                        <a asp-page="/Index" class="btn btn-link w-100 text-muted mt-2">Hủy bỏ</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>