@page "{roomId:int}"
@model HotelManagementSystem.Web.Pages.Admin.AssignCleaningModel
@{
    ViewData["Title"] = "Phân công dọn dẹp";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark py-3 text-center">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-person-badge"></i> PHÂN CÔNG NHÂN VIÊN</h4>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h5 class="text-muted">Phòng đang xử lý</h5>
                        <h2 class="fw-bold text-primary">@Model.Room?.RoomNumber</h2>
                        <span class="badge bg-light text-dark border">@Model.Room?.RoomType</span>
                    </div>

                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold text-secondary">Chọn nhân viên dọn dẹp:</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-person-check"></i></span>
                                <select asp-for="SelectedStaffUserId" class="form-select form-select-lg" required>
                                    <option value="">-- Chọn một nhân viên --</option>
                                    @foreach (var staff in Model.StaffList)
                                    {
                                        <option value="@staff.UserId">
                                            @staff.User?.FullName - (@staff.Position | @staff.Shift)
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="form-text small mt-2">
                                <i class="bi bi-info-circle"></i> Danh sách bao gồm tất cả nhân viên đang trực ca.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg rounded-pill shadow">
                                <i class="bi bi-send-check text-warning"></i> XÁC NHẬN PHÂN CÔNG
                            </button>
                            <a asp-page="/Index" class="btn btn-link text-decoration-none text-muted mt-2">
                                <i class="bi bi-arrow-left"></i> Quay lại sơ đồ phòng
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}