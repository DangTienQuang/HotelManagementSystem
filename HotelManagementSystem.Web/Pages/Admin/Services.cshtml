@page
@model HotelManagementSystem.Web.Pages.Admin.ServicesModel
@{
    ViewData["Title"] = "Dịch vụ khách sạn";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white fw-bold">THÊM DỊCH VỤ MỚI</div>
                <form method="post" asp-page-handler="AddService" class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Tên dịch vụ</label>
                        <input asp-for="NewService.Name" class="form-control" placeholder="Giặt ủi, Buffet..." required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Đơn giá</label>
                        <input asp-for="NewService.Price" type="number" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Xác nhận thêm</button>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Tên dịch vụ</th>
                            <th>Giá niêm yết</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.HotelServices)
                        {
                            <tr>
                                <td class="fw-bold">@s.Name</td>
                                <td class="text-danger fw-bold">@s.Price.ToString("N0") VND</td>
                                <td><span class="badge bg-success">Đang kinh doanh</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>