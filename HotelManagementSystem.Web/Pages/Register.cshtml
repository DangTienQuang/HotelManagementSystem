@page
@model HotelManagementSystem.Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Đăng ký Khách hàng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0 fw-bold text-uppercase">Đăng ký thông tin</h4>
                    <small>Dành cho khách hàng lưu trú</small>
                </div>
                <div class="card-body p-4">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger border-0 small">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Họ và Tên <span class="text-danger">*</span></label>
                            <input asp-for="Customer.FullName" class="form-control" placeholder="Nguyễn Văn A" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Số điện thoại <span class="text-danger">*</span></label>
                            <input asp-for="Customer.Phone" class="form-control" placeholder="09xxxxxxxx" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Số CCCD / Passport <span class="text-danger">*</span></label>
                            <input asp-for="Customer.IdentityNumber" class="form-control" placeholder="Nhập số giấy tờ" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Địa chỉ Email <span class="text-danger">*</span></label>
                            <input asp-for="Customer.Email" type="email" class="form-control" placeholder="email@vi-du.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="Input.Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                            <span asp-validation-for="Input.Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Tối thiểu 6 ký tự" required />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Địa chỉ thường trú <span class="text-danger">*</span></label>
                            <textarea asp-for="Customer.Address" class="form-control" rows="2" placeholder="Tỉnh/Thành phố..." required></textarea>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary fw-bold py-2 shadow-sm">
                                <i class="bi bi-check-circle"></i> XÁC NHẬN ĐĂNG KÝ
                            </button>
                            <a asp-page="/Index" class="btn btn-outline-secondary btn-sm border-0">Quay lại trang chủ</a>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-center mt-3 text-muted small">&copy; 2026 LuxHotel Management System</p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f7f6;
    }

    .card {
        border-radius: 1rem;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
