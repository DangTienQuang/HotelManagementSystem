@page
@model HotelManagementSystem.Web.Pages.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow border-0 overflow-hidden">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="bi bi-person-badge fs-1"></i>
                    <h4 class="mt-2">@Model.StaffInfo?.User.FullName</h4>
                    <span class="badge bg-light text-primary">@Model.StaffInfo?.Position</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted">Ca trực:</span>
                            <span class="fw-bold">@Model.StaffInfo?.Shift</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted">Ngày vào làm:</span>
                            <span>@Model.StaffInfo?.HireDate.ToString("dd/MM/yyyy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted">Email:</span>
                            <span class="small">@Model.StaffInfo?.User.Email</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted">Công việc chưa hoàn thành:</span>
                            <span class="badge bg-danger">@Model.TotalPendingTasks</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow border-0 mb-3">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-stars text-primary"></i> Công việc dọn phòng chưa xong</h5>
                    <span class="badge bg-warning text-dark">@Model.PendingCleaningTasks.Count</span>
                </div>
                <div class="card-body">
                    @if (!Model.PendingCleaningTasks.Any())
                    {
                        <p class="text-muted mb-0">Bạn không còn việc dọn phòng đang thực hiện.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Phòng</th>
                                        <th>Ngày giao</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in Model.PendingCleaningTasks)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">@task.Room?.RoomNumber</span></td>
                                            <td>@task.CleaningDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td><span class="badge bg-info text-dark">@task.Status</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow border-0">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-tools text-primary"></i> Công việc bảo trì chưa xong</h5>
                    <span class="badge bg-danger">@Model.PendingMaintenanceTasks.Count</span>
                </div>
                <div class="card-body">
                    @if (!Model.PendingMaintenanceTasks.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-emoji-smile text-muted fs-1"></i>
                            <p class="text-muted">Bạn không có công việc bảo trì nào đang chờ xử lý!</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Phòng</th>
                                        <th>Mô tả</th>
                                        <th>Ưu tiên</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in Model.PendingMaintenanceTasks)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">@task.Room.RoomNumber</span></td>
                                            <td class="small">@task.Description</td>
                                            <td>
                                                <span class="badge @(task.Priority == "High" ? "bg-danger" : "bg-info")">@task.Priority</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
