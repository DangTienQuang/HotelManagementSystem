@page
@model HotelManagementSystem.Web.Pages.ProfileModel
@{
    ViewData["Title"] = "Trang cá nhân";
}


<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 text-center p-4 mb-4">
                <div class="mx-auto bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px; font-size: 40px;">
                    @Model.UserProfile.FullName.Substring(0, 1).ToUpper()
                </div>
                <h4 class="fw-bold">@Model.UserProfile.FullName</h4>
                <p class="text-muted small">@Model.UserProfile.Role</p>
                <hr>
                <div class="text-start">
                    <p class="mb-2"><strong>Username:</strong> @Model.UserProfile.Username</p>
                    <p class="mb-0"><strong>Ngày tham gia:</strong> @Model.UserProfile.CreatedAt.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <ul class="nav nav-tabs card-header-tabs" id="profileTab" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">THÔNG TIN CHUNG</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold" id="pass-tab" data-bs-toggle="tab" data-bs-target="#pass" type="button">ĐỔI MẬT KHẨU</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                        </div>
                    }

                    <div class="tab-content" id="profileTabContent">
                        <div class="tab-pane fade show active" id="info" role="tabpanel">
                            <form method="post" asp-page-handler="UpdateInfo">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Họ và Tên</label>
                                    <input asp-for="UserProfile.FullName" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email</label>
                                    <input asp-for="UserProfile.Email" type="email" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-primary px-4">Lưu thay đổi</button>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="pass" role="tabpanel">
                            <form method="post" asp-page-handler="ChangePassword">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Mật khẩu hiện tại</label>
                                    <input asp-for="PasswordInput.OldPassword" class="form-control" />
                                    <span asp-validation-for="PasswordInput.OldPassword" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Mật khẩu mới</label>
                                    <input asp-for="PasswordInput.NewPassword" class="form-control" />
                                    <span asp-validation-for="PasswordInput.NewPassword" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Xác nhận mật khẩu</label>
                                    <input asp-for="PasswordInput.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="PasswordInput.ConfirmPassword" class="text-danger small"></span>
                                </div>
                                <button type="submit" class="btn btn-danger px-4">Cập nhật mật khẩu</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}