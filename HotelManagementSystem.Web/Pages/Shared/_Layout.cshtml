<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelManagementSystem.Web.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar-brand {
            font-weight: 800;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        .dropdown-menu {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            border-radius: 8px;
        }

        .footer {
            background: white;
            margin-top: auto;
        }

        .main-content {
            flex: 1;
        }

        .dropdown-item:active {
            background-color: #ffc107;
            color: #000;
        }
    </style>
</head>
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@inject HotelManagementSystem.Data.Context.HotelManagementDbContext DbContext
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand text-warning" asp-page="@(User.IsInRole("Admin") || User.IsInRole("Consumer") ? "/Index" : "/Staffs/MyTasks")">
                    <i class="bi bi-building-fill-check"></i> LUXURY HOTEL
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-page="/Register">
                                    <i class="bi bi-person-plus-fill"></i> ĐĂNG KÝ KHÁCH HÀNG
                                </a>
                            </li>
                        }
                        else
                        {
                            var userIdValue = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                            var isUserIdParsed = int.TryParse(userIdValue, out var currentUserId);

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/Index">
                                        <i class="bi bi-grid-3x3-gap"></i> Sơ đồ phòng
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Consumer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/MyBookings">
                                        <i class="bi bi-calendar-check"></i> Đặt phòng của tôi
                                    </a>
                                </li>
                            }

                            @* 1. PHẦN VIỆC DỌN PHÒNG (Cho Staff/Admin) *@
                            @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
                            {
                                var pendingCleaningTasks = (isUserIdParsed)
                                ? await DbContext.RoomCleanings.CountAsync(c => c.CleanedBy == currentUserId && c.Status == "In Progress")
                                : 0;
                                <li class="nav-item">
                                    <a class="nav-link text-white px-3" asp-page="/Staffs/MyTasks">
                                        <i class="bi bi-list-check"></i> Việc dọn phòng
                                        @if (pendingCleaningTasks > 0)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">@pendingCleaningTasks</span>
                                        }
                                    </a>
                                </li>
                            }

                            @* 2. PHẦN VIỆC BẢO TRÌ (Đã cập nhật cho phép Staff xem nếu bạn muốn gộp quyền) *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Technician") || User.IsInRole("Staff"))
                            {
                                var pendingMaintenance = (isUserIdParsed)
                                ? await DbContext.MaintenanceTasks.CountAsync(t => t.AssignedTo == currentUserId && t.Status != "Completed")
                                : 0;
                                <li class="nav-item">
                                    <a class="nav-link text-white px-3" asp-page="/Staffs/MaintenanceTasks">
                                        <i class="bi bi-tools text-warning"></i> Việc bảo trì
                                        @if (pendingMaintenance > 0)
                                        {
                                            <span class="badge bg-danger ms-1">@pendingMaintenance</span>
                                        }
                                    </a>
                                </li>
                            }

                            @* 3. MENU QUẢN TRỊ *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-warning fw-bold px-3 border border-warning rounded-2 ms-2" href="#" id="adminDropdown" data-bs-toggle="dropdown">
                                        <i class="bi bi-shield-lock-fill"></i> QUẢN TRỊ
                                    </a>
                                    <ul class="dropdown-menu shadow dropdown-menu-dark">
                                        <li><h6 class="dropdown-header text-uppercase text-warning">Vận hành</h6></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Operations"><i class="bi bi-speedometer2"></i> Giám sát vận hành</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Revenue"><i class="bi bi-graph-up-arrow text-success"></i> Báo cáo doanh thu</a></li>
                                        <li><a class="dropdown-item" asp-page="/Reservations"><i class="bi bi-calendar2-check"></i> Duyệt đặt phòng / Check-out</a></li>
                                        <li><hr class="dropdown-divider border-secondary"></li>
                                        <li><h6 class="dropdown-header text-uppercase text-warning">Nhân sự</h6></li>
                                        <li><a class="dropdown-item" asp-page="/Staffs/Index"><i class="bi bi-people"></i> Danh sách nhân viên</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/AddStaff"><i class="bi bi-person-plus-fill"></i> Thêm nhân viên mới</a></li>
                                        <li><hr class="dropdown-divider border-secondary"></li>
                                        <li><h6 class="dropdown-header text-uppercase text-warning">Cấu hình</h6></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Rooms"><i class="bi bi-door-open"></i> Danh mục phòng</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Services"><i class="bi bi-gear"></i> Cấu hình dịch vụ</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    @* USER INFO & LOGOUT *@
                    <div class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav-item dropdown ms-2">
                                <a class="nav-link dropdown-toggle text-white px-3 border-start border-secondary" href="#" id="userDropdown" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle fs-5"></i>
                                    <span class="ms-1 small">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    @if (!User.IsInRole("Consumer"))
                                    {
                                        <li><a class="dropdown-item" asp-page="/Profile"><i class="bi bi-person-vcard"></i> Hồ sơ cá nhân</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Logout" class="px-2">
                                            <button type="submit" class="btn btn-danger btn-sm w-100 fw-bold">
                                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-warning btn-sm fw-bold px-4 rounded-pill" asp-page="/Login">ĐĂNG NHẬP</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted shadow-sm py-3 mt-auto">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
            <span>&copy; 2026 - <strong>LuxHotel Management</strong></span>
            <span class="badge bg-dark text-warning py-2 px-3">v1.0.8-Stable</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
