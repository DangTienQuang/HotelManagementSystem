@page
@model HotelManagementSystem.Web.Pages.MyBookingsModel
@{
    ViewData["Title"] = "Đặt phòng của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-journal-check"></i> Đặt phòng của tôi</h3>
        <a asp-page="/Index" class="btn btn-outline-secondary">Xem danh sách phòng</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a asp-page="/Booking" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Tạo yêu cầu đặt phòng</a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Phòng</th>
                        <th>Ngày nhận</th>
                        <th>Ngày trả</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Reservations.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Bạn chưa có đặt phòng nào.</td>
                        </tr>
                    }
                    @foreach (var res in Model.Reservations)
                    {
                        <tr>
                            <td>@res.Room.RoomNumber</td>
                            <td>@res.CheckInDate.ToString("dd/MM/yyyy")</td>
                            <td>@res.CheckOutDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (res.Status == "Pending")
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                                else if (res.Status == "Confirmed")
                                {
                                    <span class="badge bg-warning text-dark">Confirmed</span>
                                }
                                else if (res.Status == "CheckedIn")
                                {
                                    <span class="badge bg-success">Checked In</span>
                                }
                                else if (res.Status == "Completed")
                                {
                                    <span class="badge bg-primary">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">@res.Status</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (res.Status == "Confirmed")
                                {
                                    <form method="post" asp-page-handler="CheckIn" asp-route-reservationId="@res.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="bi bi-box-arrow-in-right"></i> Check-in
                                        </button>
                                    </form>
                                }
                                else if (res.Status == "CheckedIn")
                                {
                                    <form method="post" asp-page-handler="StartCheckOut" asp-route-reservationId="@res.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-cash-stack"></i> Check-out
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
